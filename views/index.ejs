<body>

<section id="chitchat">

    <div class="container-fluid" id="c1">


        <nav class="navbar navbar-expand-lg  navbar-dark">


            <a class="navbar-brand col-brand" href=""> Chit-Chat </a>

        </nav>
        <div class="row bk">

            <div class="col-lg-6  ">
                <h1 class="head-margin"> Chit Chat - <span class="auto">  </span>   </h1>
                <h5 class="pad">Join/Create room,Chat people from all over!!</h5>


                <div class="row bu">
                    <div class="col">
                        <button type="button but" id="but-1" class="btn btn-dark btn-lg but">  Create Room </button>
                    </div>
                    <div class="col">
                        <button type="button but" id="but-2" class="btn btn-dark btn-lg but">  Join Room </button>
                    </div>

                </div>




            </div>

            <div class="col-lg-6  ">
                <img class="im" src="./images/happy-man-online-dating-via-laptop_74855-7495 (1).png" alt="im">
            </div>

        </div>
        <div class="pop" id="create">

            <div class="row">
                <form method="post">
                    <div class="container-fluid">
                        <div class="row la" >
                            <button type="button" id="but-3" class="close" aria-label="Close" >
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="form-group">
                            <label for="name">Your Name</label>

                            <input type="email" id="name-1"class="form-control" id="name" placeholder="ABC">
                        </div>
                        <div class="row la">
                            <button type="button" id="but-4" class="close" aria-label="Close" >
                                <i class="fas fa-arrow-right "></i>
                            </button>
                        </div>

                    </div>

                </form>

            </div>

        </div>
        <div class="pop" id="join">

            <div class="row" >
                <form method="post">
                    <div class="container-fluid">
                        <div class="row la">
                            <button type="button" id="but-5" class="close" aria-label="Close" >
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="form-group">
                            <label for="name">Your Name</label>

                            <input type="text" class="form-control" id="name2" placeholder="ABC">
                        </div>
                        <div class="form-group">
                            <label for="id">Enter Room Id</label>

                            <input type="text" class="form-control" id="id2" placeholder="1234">
                        </div>
                        <div class="row la">
                            <button type="submit" id="but-6" class="close" aria-label="Close" >
                                <i class="fas fa-arrow-right "></i>
                            </button>
                        </div>

                    </div>

                </form>

            </div>

        </div>




    </div>

</section>


